@using MarineFarm.DTO;
@model NewPsw

@{
    ViewData["Title"] = ViewBag.heading = "Cambiar contraseña";
    ViewBag.UsuarioAriaExpanded = "true";
    ViewBag.UsuarioGroupActive = "active";
    ViewBag.UsuarioColapseGroup = "show";
    ViewBag.changepswNavLink = "active";

}

<div class="card">
  <div class="card-header p-0 mx-3 mt-3 position-relative z-index-1">
    <h3 class="card-title">
        Canbiar Contraseña
    </h3>
  </div>

  <div class="card-body pt-2">
    <form asp-action="ChangePsw" method="post">
         <div class="row">
            <div class="form-group col-12">
                <label asp-for="OPsw" class="control-label"> Actual</label>   
                <input asp-for="OPsw" class="form-control text-to-upper-alau" />
                <span asp-validation-for="OPsw" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 ">
                <label asp-for="Npsw" class="control-label"> Nueva </label>
                <input asp-for="Npsw" class="form-control text-to-upper-alau" />
                <span asp-validation-for="Npsw" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 ">
                <label asp-for="ConfirmNpsw" class="control-label"> Confirmar </label>
                <input asp-for="ConfirmNpsw" class="form-control text-to-upper-alau" />
                <span asp-validation-for="ConfirmNpsw" class="text-danger"></span>
            </div>
        </div>
         <div class="card-footer form-group text-center m-0">
             <input type="submit" value="Guardar" class="btn btn-primary rounded-pill" />
             <a class="btn btn-danger rounded-pill" asp-action="Index">Volver</a>
         </div>
    </form>
  
  </div>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
