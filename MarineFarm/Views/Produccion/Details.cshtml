@using MarineFarm.DTO;
@model ProduccionDTO_out

@{
    ViewData["Title"] = ViewBag.heading = "Detalles De Produccion";
    // => este es sobre el boton para expandir y el grupo de botones
    ViewBag.ProduccionAriaExpanded = "true";
    ViewBag.ProduccionGroupActive = "active";
    // => este es simplemente para que se vea la poscicion actual
    ViewBag.ProduccionColapseGroup = "show";
    ViewBag.HProduccionNavLink = "active";

}




<div class="row mt-4">
    <div class="col-sm-12">
        <div class="card h-100">
            <div class="card-header pb-0 p-3">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="mb-0 card-title">Nombre: @Model.SupervName</h5>
                        <h6 class="mb-0 card-subtitle">Email: @Model.SupervEmail </h6>
                    </div>
                    <div class="col-md-6 d-flex justify-content-end align-items-center">
                        <i class="far fa-calendar-alt me-2"></i>
                        <small>Generado: @Model.Fecha.ToString("dd/MM/yyyy") </small>
                        @* <p class="mb-0 card-text"/>Posible Entrega: @Model.FechaEntregaPosible.ToString("dd/MM/yyyy") </p>*@
                    </div>
                </div>
            </div>
            <div class="card-body p-3">
                <ul class="list-group">
                    @foreach (var item in Model.productos)
                    {
                        <li class="list-group-item border-0 justify-content-between ps-0 pb-0 border-radius-lg">
                            <h5 class="mb-1 text-dark text-md">@item.Marisco </h5>
                            <div class="d-flex align-items-center text-danger text-gradient text-sm font-weight-bold ms-auto">
                                <span class="text-md">Cantidad Utilizada: @item.CantUsada KG </span>
                            </div>
                            <br/>
                            @foreach (var prod in item.Productos)
                            {
                                <div class="d-flex">
                                    <div class="d-flex align-items-center">
                                        <div class="btn btn-icon-only btn-rounded btn--success mb-0 me-3 p-3 btn-sm d-flex align-items-center justify-content-center">
                                            <i class="fa-solid fa-check"></i>
                                        </div>

                                        <div class="d-flex flex-column">
                                            <h6 class="mb-1 text-dark text-sm">@prod.TipoProduccion <i class="fa-solid fa-arrow-right"></i> @prod.Calibre <i class="fa-solid fa-arrow-right"></i> @prod.Empaquetado</h6>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center text-success text-gradient text-sm font-weight-bold ms-auto">
                                        <span class="text-xs">Cantidad Producida: @prod.CantProduccida KG </span>
                                    </div>
                                </div>
                                <hr class="horizontal dark mt-3 mb-2" />
                            }
                        </li>
                    }
                </ul>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>    