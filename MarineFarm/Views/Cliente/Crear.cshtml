@using MarineFarm.DTO;
@model ClienteDTO_in

@{
    ViewData["Title"] = ViewBag.heading = "Nuevo Cliente";
    // => este es sobre el boton para expandir y el grupo de botones
    ViewBag.ClienteAriaExpanded = "true";
    ViewBag.ClienteGroupActive = "active";
    // => este es simplemente para que se vea la poscicion actual
    ViewBag.ClienteColapseGroup = "show";
    ViewBag.NClienteNavLink = "active";

    }



<div class="card">
  <div class="card-header p-0 mx-3 mt-3 position-relative z-index-1">
    <h3 class="card-title">
        Nuevo
    </h3>
  </div>

  <div class="card-body pt-2">
    <form asp-action="Guardar" method="post">
         <div class="row">
            <div class="form-group col-md-4 col-xs-12">
                <label asp-for="Name" class="control-label"> Nombre</label>
                <input asp-for="Name" class="form-control text-to-upper-alau" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4 col-xs-12">
                <label asp-for="Desc" class="control-label"> Pais </label>
                <select asp-for="Desc" class="form-control" asp-items="@ViewBag.Paises"></select>
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4 col-xs-12">
                <label asp-for="RUT" class="control-label"></label>
                <input  asp-for="RUT" class="form-control text-to-upper-alau" />
                <span asp-validation-for="RUT" class="text-danger"></span>
            </div>
        </div>
         <div class="card-footer form-group text-center m-0">
             <input type="submit" value="Guardar" class="btn btn-primary rounded-pill" />
             <a class="btn btn-danger rounded-pill" asp-action="Index">Volver</a>
         </div>
    </form>
  
  </div>
</div>