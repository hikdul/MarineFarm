@using MarineFarm.DTO;
@model IEnumerable<EquipoDTO_out>

@{
    ViewData["Title"] = ViewBag.heading = "Cargos";
    // => este es sobre el boton para expandir y el grupo de botones
    ViewBag.EquipoAriaExpanded = "true";
    ViewBag.EquipoGroupActive = "active";
    // => este es simplemente para que se vea la poscicion actual
    ViewBag.EquipoColapseGroup = "show";
    ViewBag.EquipoNavLink = "active";

}

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <!-- Card header -->
            <div class="card-header">
                <p class="text-sm mb-0">
                    <a asp-action="Crear" class="btn btn-primary btn-round" ><i class="fa fa-plus"></i></a>
                </p>
                <h5 class="mb-0">Listado De Cargos Activos</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-flush" id="datatable-search">
                    <thead class="thead-dark">
                        <tr class="text-center">
                            <th>Nombre</th>
                            <th>Desc</th>
                            <th>O. Necesarios</th>
                            <th>O. Cubiertos</th>
                            <th><i class="text-dark fa fa-gears"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count() > 0)
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td class=" text-sm font-weight-bold">@item.NombreTurno</td>
                                    <td class="text-sm font-weight-normal">@item.DescTurno</td>
                                    <td class="text-sm font-weight-normal">@item.operadoresNecesarios</td>
                                    <td class="text-sm font-weight-normal">@item.operadoresCubiertos</td>
                                    <td class="text-sm font-weight-light">
                                        <a asp-action="Editar" asp-route-id="@item.Turnoid" class="btn btn-primary btn-round"><i class="fa fa-edit "></i></a>
                                        <a asp-action="Eliminar" asp-controller="Equipo" asp-route-id="@item.Turnoid" class="btn btn-danger btn-round"><i class="fa fa-trash "></i></a>
                                    </td>
                                </tr>
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script>
    const dataTableSearch = new simpleDatatables.DataTable("#datatable-search", {
        searchable: true,
        fixedHeight: true
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

